# ---------------------------
# Application Configuration
# ---------------------------
APP_ENV=development        # Environment: development, production, etc.
APP_DEBUG=true             # Debug mode: true or false
APP_URL=http://localhost   # Base URL of the application

# ---------------------------
# Database Configuration
# ---------------------------
DB_HOST=db                 # Database host (use 'db' for the Docker service name)
DB_NAME=leads_db           # Database name
DB_USER=root               # Database user
DB_PASS=root               # Database password
DB_PORT=3306               # Database port (default for MySQL)

# ---------------------------
# Logger Configuration
# ---------------------------
LOG_NAME=slim-app          # Name of the logger

# ---------------------------
# External API Configuration
# ---------------------------
EXTERNAL_API_BASE_URI=https://mock-api.com/   # Base URI of the external API
EXTERNAL_API_ENDPOINT=marketing-webhooks      # API endpoint for notifications

# ---------------------------
# Notification Retry Configuration
# ---------------------------
NOTIFY_MAX_RETRIES=3       # Maximum number of retry attempts
NOTIFY_RETRY_DELAY=2       # Delay (in seconds) between retry attempts
